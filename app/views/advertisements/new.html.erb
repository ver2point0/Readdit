<h1>New Advertisement</h1>
<div class="row">
    <div class="col-md-4">
        <p>Guidelines for Advertisements</p>
        <ul>
            <li>Keep your advertisements relevant.</li>
            <li>Set your price.</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @advertisement do |f| %>
          <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
          </div>
          <div class="form-group">
            <%= f.label :copy %>
            <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advertisement body" %>
          </div>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price, class: 'form-control', placeholder: "Set your price." %>
          </div>
          <div class="form-group">
              <%= f.submit "Save", class: 'btn btn-success' %>
          </div>
        <% end %>
    </div>
</div>
