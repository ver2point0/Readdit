<h1>All Questions</h1>
<% @questions.each do |question| %>
<div class="media">
    <div class="media-body">
        <h4 class="media-heading">
            <%= link_to question.title, question %>
            <%= if question.resolved
            check_box_tag :resolved, "1", question.resolved, disabled: true
            end %>
        </h4>
    </div>
</div>
<% end %> 