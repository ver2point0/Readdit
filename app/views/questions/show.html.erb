<h1><%= @question.title %></h1>

<div class="row">
    <div class="col-md-8">
        <p><%= @question.body %><br/><br/>
            <%= if @question.resolved
            check_box("question", "resolved", { :disabled => :true})
            end %>
        </p>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
        <%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger', date: {confirm: 'Are you sure you want to delete this question?'} %>
    </div>
</div>